- prompt_val = local_assigns[:prompt]
- select_options = prompt_val ? { prompt: prompt_val } : { selected: local_assigns[:selected] }

%div
  = f.label field_name, class: 'flex items-center gap-2 text-sm font-medium text-gray-700 mb-2' do
    = icon icon_name, class: 'w-4 h-4 text-orange-500'
    = label_text
  = f.collection_select field_name, namespaces, :id, :name_with_type, select_options, { class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' }
