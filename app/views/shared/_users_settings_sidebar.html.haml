%div{class: 'fixed top-0 left-0 w-64 bg-white shadow-lg p-6 h-screen border-r border-gray-200'}
  %div{class: 'flex items-center justify-between px-6 py-3'}
    = link_to root_path, class: 'flex items-center gap-2 font-bold text-gray-800 hover:text-blue-600' do
      = image_tag 'logo.png', alt: 'Gisia Logo', class: 'h-9 w-9'
      %span{class: 'text-sm'} Gisia
    = link_to users_settings_profile_path, class: 'w-8 h-8 rounded-full border-2 border-gray-200 hover:border-blue-400 overflow-hidden flex items-center justify-center' do
      = render 'shared/user_avatar', user: current_user, size: 32, css_class: 'w-full h-full rounded-full object-cover'

  %div{class: 'mb-6'}
    %h2{class: 'text-xs font-semibold text-gray-700 uppercase mb-3'}
      User Settings

  %nav
    %ul{class: 'space-y-1'}
      %li
        = link_to edit_users_settings_profile_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium text-gray-800 rounded-lg hover:bg-blue-50 hover:text-blue-700 group" do
          = icon 'user-circle', class: 'w-4 h-4 text-gray-600 group-hover:text-blue-600'
          %span Profile
      %li
        = link_to edit_users_settings_password_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium text-gray-800 rounded-lg hover:bg-blue-50 hover:text-blue-700 group" do
          = icon 'lock', class: 'w-4 h-4 text-gray-600 group-hover:text-blue-600'
          %span Password
      %li
        = link_to users_settings_keys_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium text-gray-800 rounded-lg hover:bg-blue-50 hover:text-blue-700 group" do
          = icon 'key', class: 'w-4 h-4 text-gray-600 group-hover:text-blue-600'
          %span Keys

  %div{class: 'absolute bottom-6 left-6 right-6'}
    %div{class: 'border-t border-gray-200 pt-4'}
      %div{class: 'flex items-center justify-between'}
        %div{class: 'flex items-center gap-2 text-xs text-gray-500'}
          = icon 'info', class: 'w-4 h-4'
          %span
            = "Version #{Gisia::VERSION}"
        - if current_user&.admin?
          = link_to admin_root_path, class: "px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-100 border border-gray-300 rounded hover:bg-gray-200" do
            = icon 'gear', class: 'w-3 h-3 inline mr-1'
            Admin
