%nav{ class: "fixed top-0 left-64 right-0 z-20 bg-white border-b border-slate-200/60 px-6 py-3" }
  %ol{ class: "flex items-center gap-1 text-sm" }
    - nodes.each_with_index do |node, index|
      %li{ class: "flex items-center gap-1" }
        = link_to node[:label], node[:path], { class: "text-slate-600 hover:text-slate-900 transition-colors duration-200" }
        - unless index == nodes.size - 1
          %span{ class: "mx-2 text-slate-400 select-none" }
            = ">"

= render 'shared/flash'

