%div{class: 'fixed top-0 left-0 w-64 bg-white border-r border-gray-200 h-screen flex flex-col'}
  %div{class: 'flex items-center justify-between p-6'}
    = link_to root_path, class: 'flex items-center gap-2 text-2xl font-bold text-gray-800 hover:text-blue-600' do
      = image_tag 'logo.png', alt: 'Gisia Logo', class: 'h-8 w-8'
      %span{class: 'text-lg'} Gisia
    = link_to users_settings_profile_path, class: 'w-10 h-10 rounded-full border-2 border-gray-200 hover:border-blue-400 overflow-hidden' do
      = render 'shared/user_avatar', user: current_user, size: 40, css_class: 'rounded-full object-cover'

  %div{class: 'flex-1 overflow-y-auto px-4 py-6 sidebar-scroll'}
    %div{class: 'mb-6'}
      %h2{class: 'text-xs font-semibold text-gray-500 uppercase mb-2 px-2'}
        Overview
      %ul{class: 'space-y-0.5'}
        %li
          = link_to admin_root_path, class: "flex items-center gap-3 px-3 py-2 text-sm font-medium #{current_page?(admin_root_path) ? 'text-blue-700 bg-blue-50' : 'text-gray-800'} rounded hover:bg-gray-50 hover:text-blue-700 group" do
            = icon 'chart-bar', class: "w-4 h-4 #{current_page?(admin_root_path) ? 'text-blue-600' : 'text-gray-600'} group-hover:text-blue-600"
            %span Dashboard
        %li
          = link_to admin_users_path, class: "flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-800 rounded hover:bg-gray-50 hover:text-blue-700 group" do
            = icon 'users', class: 'w-4 h-4 text-gray-600 group-hover:text-blue-600'
            %span Users
        %li
          = link_to admin_projects_path, class: "flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-800 rounded hover:bg-gray-50 hover:text-blue-700 group" do
            = icon 'briefcase', class: 'w-4 h-4 text-gray-600 group-hover:text-blue-600'
            %span Projects
        %li
          = link_to admin_groups_path, class: "flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-800 rounded hover:bg-gray-50 hover:text-blue-700 group" do
            = icon 'circles-three', class: 'w-4 h-4 text-gray-600 group-hover:text-blue-600'
            %span Groups

    %div{class: 'mb-6'}
      %h2{class: 'text-xs font-semibold text-gray-500 uppercase mb-2 px-2'}
        CI/CD
      %ul{class: 'space-y-0.5'}
        %li
          = link_to admin_runners_path, class: "flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-800 rounded hover:bg-gray-50 hover:text-blue-700 group" do
            = icon 'computer-tower', class: 'w-4 h-4 text-gray-600 group-hover:text-blue-600'
            %span Runners
        %li
          = link_to admin_jobs_path, class: "flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-800 rounded hover:bg-gray-50 hover:text-blue-700 group" do
            = icon 'play-circle', class: 'w-4 h-4 text-gray-600 group-hover:text-blue-600'
            %span Jobs

  = render 'shared/sidebar_footer'

