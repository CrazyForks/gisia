%div#flash{ class: 'fixed top-0 left-64 right-0 z-21' }
  - if flash.any?
    - flash.each do |type, message|
      %div.flash-message{ class: "px-6 py-3 flex items-center justify-between #{type.to_sym == :alert ? 'bg-red-50 text-red-800 border-b border-red-200' : 'bg-green-50 text-green-800 border-b border-green-200'}", 'data-controller': 'flash-message' }
        = message
        %button.close-flash{ class: 'ml-4 text-lg font-bold cursor-pointer hover:opacity-70', type: 'button', 'data-action': 'click->flash-message#close' }
