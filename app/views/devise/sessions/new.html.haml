= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: ' mb-32 min-w-lg max-w-md mx-auto bg-white p-8 rounded-lg shadow-md' }, data: { turbo: false }) do |f|
  - if resource.errors.any?
    .bg-red-100.border-l-4.border-red-500.text-red-700.p-4.mb-6.rounded
      %ul
        - resource.errors.full_messages.each do |msg|
          %li= msg
  .mb-4
    %h1.text-2xl.font-bold.text-center.mb-8.text-gray-800 Log in
    = f.label :username, class: 'block text-sm font-semibold text-gray-700'
    = f.text_field :username, autofocus: true, autocomplete: "username", class: 'w-full px-2 py-1 mt-1 border border-gray-400 rounded-md text-gray-800 focus:outline-none focus:ring-1 focus:ring-blue-500'
  .mb-4
    = f.label :password, class: 'block text-sm font-semibold text-gray-700'
    = f.password_field :password, autocomplete: "current-password", class: 'w-full px-2 py-1 mt-1 border border-gray-400 rounded-md text-gray-800 focus:outline-none focus:ring-1 focus:ring-blue-500'
  - if devise_mapping.rememberable?
    .flex.items-center.mb-6
      = f.check_box :remember_me, class: 'mr-2'
      = f.label :remember_me, class: 'text-sm text-gray-600'
  .mb-6
    = f.submit "Log in", class: 'w-full py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500'
