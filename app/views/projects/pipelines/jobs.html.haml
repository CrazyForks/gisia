- content_for :breadcrumb do
  - nodes = [*project_breadcrumb_nodes(@project), { label: 'Pipelines', path: pipelines_path(@project) }, { label: "##{@pipeline.id}", path: pipeline_path(@pipeline)}]
  = render 'shared/breadcrumb', nodes: nodes


- content_for :pipeline_content do
  - if @pipeline.messages.any?
    %div{ class: 'mb-4 space-y-2' }
      - @pipeline.messages.each do |message|
        - if message.error?
          %div{ class: 'flex items-start gap-3 px-4 py-3 bg-rose-50 border border-rose-200 rounded-lg' }
            = icon 'warning-circle', class: 'w-5 h-5 text-rose-500 flex-shrink-0 mt-0.5'
            %p{ class: 'text-sm text-rose-700' }= message.content
        - else
          %div{ class: 'flex items-start gap-3 px-4 py-3 bg-amber-50 border border-amber-200 rounded-lg' }
            = icon 'warning', class: 'w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5'
            %p{ class: 'text-sm text-amber-700' }= message.content
  = render 'jobs'
= render 'detail'
