- if @webhooks.any?
  %div{class: 'space-y-3'}
    - @webhooks.each do |webhook|
      %div{id: "webhook-#{webhook.id}", class: 'flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50'}
        %div{class: 'flex-1 min-w-0'}
          %div{class: 'flex items-center gap-2'}
            %p{class: 'font-medium text-gray-900 truncate'}
              = webhook.name
          - if webhook.description.present?
            %p{class: 'text-sm text-gray-600 mt-1'}
              = truncate(webhook.description, length: 100)
          %div{class: 'flex items-center gap-2 mt-2'}
            - if webhook.push_events?
              %span{class: 'inline-block bg-blue-50 text-blue-700 px-2 py-0.5 rounded text-xs font-medium'}
                Branch Push events
            - if webhook.tag_push_events?
              %span{class: 'inline-block bg-purple-50 text-purple-700 px-2 py-0.5 rounded text-xs font-medium'}
                Tag push events
        %div{class: 'flex items-center gap-2 ml-4'}
          = button_to edit_webhook_path(@project, webhook), method: :post, id: "edit-webhook-#{webhook.id}", class: 'px-3 py-2 text-gray-600 hover:text-blue-600 text-sm font-medium border-none bg-none cursor-pointer', data: { turbo_frame: 'webhooks-content' } do
            = icon 'pencil', class: 'w-4 h-4'
          = button_to delete_webhook_path(@project, webhook), method: :delete, id: "delete-webhook-#{webhook.id}", class: 'px-3 py-2 text-gray-600 hover:text-red-600 text-sm font-medium border-none bg-none cursor-pointer', data: { turbo_confirm: 'Are you sure?' } do
            = icon 'trash', class: 'w-4 h-4'
- else
  %div{class: 'text-center py-12 border border-gray-200 rounded-lg bg-gray-50'}
    = icon 'flow-arrow', class: 'w-12 h-12 text-gray-400 mx-auto mb-4'
    %p{class: 'text-gray-600'}
      No webhooks yet. Create your first webhook to get started.
