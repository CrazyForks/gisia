- newly_created ||= false
= turbo_frame_tag "stage-column-#{stage.id}", class: 'contents' do
  %div{ class: "flex flex-col flex-1 min-w-40 h-full bg-slate-50 rounded-lg border border-slate-200#{newly_created ? ' bg-green-50 border-green-200 shadow-[0_0_0_3px_rgba(34,197,94,0.3)]' : ''}", id: (stage.closed? ? 'closed-stage' : nil) }
    = render 'projects/boards/stage_header', stage: stage, issues: issues
    - if @show_edit_form
      = render 'projects/stages/labels_edit_card', stage: stage, board: @board, project: @project, selected_label_ids: stage.label_ids
    - else
      = turbo_frame_tag "stage-labels-card-#{stage.id}"
    %div{ class: 'flex-1 overflow-y-auto p-3 space-y-3 min-h-0' }
      - if issues.any?
        - issues.each do |issue|
          = render 'shared/work_item_card', work_item: issue
      - else
        %div{ class: 'flex items-center justify-center py-8 text-slate-500 text-sm' }
          No issues
