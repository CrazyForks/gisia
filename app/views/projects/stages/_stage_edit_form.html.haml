= form_with url: update_stage_namespace_project_board_stage_path(project.namespace.parent.full_path, project.path, board, stage), method: :patch, id: "stage-edit-form-#{stage.id}", data: { turbo_frame: "stage-column-#{stage.id}", stage_label_search_target: 'stageEditForm' } do |f|
  %div{ class: 'flex flex-col gap-2 mt-2 pt-2 border-t border-slate-200' }
    %div{ class: 'flex flex-col gap-1' }
      %label{ class: 'text-xs font-medium text-slate-700' }
        Stage Title
      = f.text_field :title, value: stage.title, class: 'w-full px-2 py-1.5 text-xs border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
    %div{ class: 'flex flex-col gap-1' }
      %label{ class: 'text-xs font-medium text-slate-700' }
        Order
      = f.number_field :rank, value: stage.rank, class: 'w-full px-2 py-1.5 text-xs border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
