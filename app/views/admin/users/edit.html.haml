- content_for :breadcrumb do
  - nodes = [{ label: 'Admin', path: admin_root_path }, { label: 'Users', path: admin_users_path }, { label: @user.username, path: admin_user_path(@user) }, { label: 'Edit', path: '#' }]
  = render 'shared/breadcrumb', nodes: nodes

%div{class: 'w-full bg-white p-2 rounded-lg'}
  %div{class: 'w-full max-w-6xl mx-auto'}

    %div{class: 'py-6'}
      %div{class: 'flex items-center gap-4 mb-6'}
        %div{class: 'h-16 w-16 rounded-full bg-green-500 flex items-center justify-center text-white text-xl font-bold'}
          = @user.username.first.upcase
        %div
          %h1{class: 'text-2xl font-bold text-gray-900'} Edit #{@user.username}
          %p{class: 'text-gray-600'} Update user information and permissions

    = form_with model: [:admin, @user], local: true do |f|
      %div{class: 'bg-gray-50 border border-gray-200 rounded-lg p-6 mb-6'}
        %h3{class: 'text-lg font-semibold text-gray-900 mb-6'} Basic Information

        %div{class: 'grid grid-cols-1 md:grid-cols-2 gap-6'}
          %div
            = f.label :username, class: 'block text-sm font-medium text-gray-700 mb-2'
            = f.text_field :username, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
            - if @user.errors[:username].any?
              %p{class: 'mt-1 text-sm text-red-600'}= @user.errors[:username].first

          %div
            = f.label :email, class: 'block text-sm font-medium text-gray-700 mb-2'
            = f.email_field :email, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
            - if @user.errors[:email].any?
              %p{class: 'mt-1 text-sm text-red-600'}= @user.errors[:email].first

        %div{class: 'mt-6'}
          = f.label :name, class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.text_field :name, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
          - if @user.errors[:name].any?
            %p{class: 'mt-1 text-sm text-red-600'}= @user.errors[:name].first

      %div{class: 'bg-gray-50 border border-gray-200 rounded-lg p-6 mb-6'}
        %h3{class: 'text-lg font-semibold text-gray-900 mb-6'} Password

        %div{class: 'grid grid-cols-1 md:grid-cols-2 gap-6'}
          %div
            = f.label :password, class: 'block text-sm font-medium text-gray-700 mb-2'
            = f.password_field :password, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: 'Leave blank to keep current password'
            - if @user.errors[:password].any?
              %p{class: 'mt-1 text-sm text-red-600'}= @user.errors[:password].first

          %div
            = f.label :password_confirmation, 'Password confirmation', class: 'block text-sm font-medium text-gray-700 mb-2'
            = f.password_field :password_confirmation, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: 'Confirm new password'
            - if @user.errors[:password_confirmation].any?
              %p{class: 'mt-1 text-sm text-red-600'}= @user.errors[:password_confirmation].first

        %p{class: 'text-xs text-gray-500 mt-2'} Leave password fields blank to keep the current password

      %div{class: 'bg-gray-50 border border-gray-200 rounded-lg p-6 mb-6'}
        %h3{class: 'text-lg font-semibold text-gray-900 mb-6'} Permissions & Status

        %div{class: 'flex items-center'}
          = f.check_box :admin, class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'
          = f.label :admin, class: 'ml-2 block text-sm text-gray-900' do
            Administrator
          %p{class: 'ml-6 text-xs text-gray-500'} Grants full access to the admin area

      %div{class: 'flex items-center justify-between'}
        %div{class: 'flex items-center gap-3'}
          = f.submit 'Update User', class: 'inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-all duration-200'
          = link_to admin_user_path(@user), class: 'inline-flex items-center gap-2 px-4 py-2 bg-gray-200 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-300 transition-all duration-200' do
            Cancel

        = link_to admin_user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-all duration-200' do
          = icon 'trash', class: 'w-4 h-4'
          Delete User