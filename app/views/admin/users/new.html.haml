- content_for :breadcrumb do
  - nodes = [{ label: 'Admin', path: admin_root_path }, { label: 'Users', path: admin_users_path }, { label: 'New User', path: '#' }]
  = render 'shared/breadcrumb', nodes: nodes

%div{class: 'w-full bg-white p-2 rounded-lg'}
  %div{class: 'w-full max-w-4xl mx-auto'}

    %div{class: 'py-6'}
      %div{class: 'flex items-center gap-4 mb-8'}
        %div{class: 'h-16 w-16 rounded-full bg-blue-500 flex items-center justify-center text-white text-xl font-bold'}
          = icon 'plus', class: 'w-8 h-8'
        %div
          %h1{class: 'text-2xl font-bold text-gray-900'} New User
          %p{class: 'text-gray-600'} Create a new user account

    = form_with model: [:admin, @user], local: true, class: 'space-y-6' do |f|
      %div{class: 'bg-gray-50 border border-gray-200 rounded-xl p-6'}
        %h3{class: 'text-lg font-semibold text-gray-900 mb-4'} Basic Information

        %div{class: 'grid grid-cols-1 md:grid-cols-2 gap-6'}
          %div
            = f.label :username, class: 'block text-sm font-medium text-gray-700 mb-2'
            = f.text_field :username, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: 'johndoe'
            - if @user.errors[:username].any?
              %p{class: 'mt-1 text-sm text-red-600'}= @user.errors[:username].first

          %div
            = f.label :email, class: 'block text-sm font-medium text-gray-700 mb-2'
            = f.email_field :email, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: 'john@example.com'
            - if @user.errors[:email].any?
              %p{class: 'mt-1 text-sm text-red-600'}= @user.errors[:email].first

        %div
          = f.label :name, class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.text_field :name, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: 'John Doe'
          - if @user.errors[:name].any?
            %p{class: 'mt-1 text-sm text-red-600'}= @user.errors[:name].first

      %div{class: 'bg-gray-50 border border-gray-200 rounded-xl p-6'}
        %h3{class: 'text-lg font-semibold text-gray-900 mb-4'} Permissions & Status

        %div{class: 'space-y-4'}
          %div{class: 'flex items-center'}
            = f.check_box :admin, class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'
            = f.label :admin, class: 'ml-2 block text-sm text-gray-900'
              Administrator
            %p{class: 'ml-6 text-xs text-gray-500'} Grants full access to the admin area


      %div{class: 'bg-yellow-50 border border-yellow-200 rounded-xl p-4'}
        %div{class: 'flex'}
          = icon 'warning', class: 'w-5 h-5 text-yellow-400 mt-0.5'
          %div{class: 'ml-3'}
            %h3{class: 'text-sm font-medium text-yellow-800'} Password Notice
            %p{class: 'mt-1 text-sm text-yellow-700'}
              The user will need to set their own password through the password reset process.

      %div{class: 'flex items-center gap-3 pt-6 border-t border-gray-200'}
        = f.submit 'Create User', class: 'inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-all duration-200'
        = link_to admin_users_path, class: 'inline-flex items-center gap-2 px-4 py-2 bg-gray-200 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-300 transition-all duration-200' do
          Cancel
