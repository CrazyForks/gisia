- if @groups&.any?
  %div{class: 'space-y-0 bg-white border border-gray-200 rounded-lg overflow-hidden'}
    %div{class: 'bg-gray-100 px-6 py-3 border-b border-gray-200'}
      %div{class: 'flex items-center justify-between'}
        %div{class: 'flex items-center gap-3 flex-1 min-w-0'}
          %div{class: 'flex-1 min-w-0'}
            %div{class: 'text-xs font-medium text-gray-500 uppercase tracking-wider'} Group
        %div{class: 'flex items-center gap-3 flex-shrink-0'}
          %div{class: 'text-xs font-medium text-gray-500 uppercase tracking-wider w-20'} Members
          %div{class: 'text-xs font-medium text-gray-500 uppercase tracking-wider w-20'} Projects
          %div{class: 'text-xs font-medium text-gray-500 uppercase tracking-wider w-24'} Created
          %div{class: 'text-xs font-medium text-gray-500 uppercase tracking-wider w-32'} Actions
    - @groups.each do |group|
      %div{class: 'px-6 py-4 border-b border-gray-100 hover:bg-slate-50/50 transition-all duration-200 last:border-b-0'}
        %div{class: 'flex items-center justify-between'}
          %div{class: 'flex items-center gap-3 flex-1 min-w-0'}
            = icon 'circles-three', class: 'w-4 h-4 text-purple-500 flex-shrink-0'
            %div{class: 'flex-1 min-w-0'}
              %div{class: 'flex items-center gap-2'}
                = link_to admin_group_path(group), class: 'font-medium text-gray-900 hover:text-blue-600 transition-colors truncate' do
                  = group.name
                - case group.namespace.visibility_level
                - when Gitlab::VisibilityLevel::PRIVATE
                  %span{class: 'inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700 flex-shrink-0'}
                    = icon 'lock', class: 'w-2.5 h-2.5 mr-0.5'
                    Private
                - when Gitlab::VisibilityLevel::INTERNAL
                  %span{class: 'inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-700 flex-shrink-0'}
                    = icon 'users', class: 'w-2.5 h-2.5 mr-0.5'
                    Internal
                - when Gitlab::VisibilityLevel::PUBLIC
                  %span{class: 'inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700 flex-shrink-0'}
                    = icon 'globe', class: 'w-2.5 h-2.5 mr-0.5'
                    Public
              %p{class: 'text-gray-500 text-xs truncate mt-0.5'}= group.namespace.path
          %div{class: 'flex items-center gap-3 flex-shrink-0'}
            %div{class: 'text-xs text-gray-900 w-20'}
              = pluralize(group.members.count, 'member')
            %div{class: 'text-xs text-gray-900 w-20'}
              = pluralize(group.namespace.descendant_projects.count, 'project')
            %div{class: 'text-xs text-gray-400 w-24'}
              = group.created_at.strftime('%b %d, %Y')
            %div{class: 'flex items-center gap-1 w-32'}
              = link_to admin_group_path(group), class: 'p-2 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg text-xs', data: { turbo_frame: '_top' } do
                View
              = link_to edit_admin_group_path(group), class: 'p-2 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg text-xs', data: { turbo_frame: '_top' } do
                Edit
              = link_to admin_group_path(group), class: 'p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg text-xs', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this group? This action cannot be undone.', turbo_frame: '_top' } do
                Delete
  = render 'shared/pagination', collection: @groups, url_params: { search: params[:search], visibility: params[:visibility] }, turbo_frame: 'groups_content'
- else
  %div{class: 'bg-white border border-gray-200 rounded-lg p-16 text-center'}
    %div{class: 'w-16 h-16 rounded-full bg-purple-50 flex items-center justify-center mx-auto mb-4'}
      = icon 'circles-three', class: 'w-8 h-8 text-purple-500'
    %h3{class: 'text-lg font-medium text-gray-900 mb-2'} No groups found
    %p{class: 'text-gray-500 text-sm'} Groups will appear here when they are created.