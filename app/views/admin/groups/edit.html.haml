- content_for :breadcrumb do
  - nodes = [{ label: 'Admin', path: admin_root_path }, { label: 'Groups', path: admin_groups_path }, { label: @group.name, path: admin_group_path(@group) }, { label: 'Edit', path: '#' }]
  = render 'shared/breadcrumb', nodes: nodes

%div{class: 'w-full bg-white p-2 rounded-lg'}
  %div{class: 'w-full max-w-6xl mx-auto'}

    %div{class: 'py-6'}
      %div{class: 'flex items-center gap-4 mb-6'}
        %div{class: 'flex-shrink-0'}
          = icon 'gear', class: 'w-12 h-12 text-gray-400'
        %div
          %h1{class: 'text-2xl font-bold text-gray-900'} Edit Group
          %p{class: 'text-gray-600'} Update group settings and information

    = form_with model: [:admin, @group], local: true do |f|
      %div{class: 'bg-gray-50 border border-gray-200 rounded-lg p-6 mb-6'}
        %h3{class: 'text-lg font-semibold text-gray-900 mb-6'} Basic Information

        %div{class: 'mb-6'}
          = f.label :name, 'Group name', class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.text_field :name, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
          - if @group.errors[:name].any?
            %p{class: 'text-red-500 text-xs mt-1'}= @group.errors[:name].first

        %div{class: 'mb-6'}
          = f.label :path, 'Group path', class: 'block text-sm font-medium text-gray-700 mb-2'
          %p{class: 'text-sm text-gray-500 mb-2'} 
            The group path is used in URLs and cannot be changed after creation.
          = f.text_field :path, readonly: true, class: 'w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-lg text-gray-600'
          %p{class: 'text-xs text-gray-500 mt-1'} Group path cannot be modified for existing groups.

        %div{class: 'mb-4'}
          = f.label :description, 'Description', class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.text_area :description, rows: 4, class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
          - if @group.errors[:description].any?
            %p{class: 'text-red-500 text-xs mt-1'}= @group.errors[:description].first

      %div{class: 'flex items-center justify-between'}
        %div{class: 'flex items-center gap-3'}
          = f.submit 'Update Group', class: 'inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-all duration-200'
          = link_to admin_group_path(@group), class: 'inline-flex items-center gap-2 px-4 py-2 bg-gray-200 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-300 transition-all duration-200' do
            Cancel

        = link_to admin_group_path(@group), class: 'inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-all duration-200', data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this group?' } do
          = icon 'trash', class: 'w-4 h-4'
          Delete Group