{
  "name": "gitnix",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Martin Tan <mtanpub@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@lexical/markdown": "^0.35.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "csso-cli": "^4.0.2",
    "nodemon": "^3.0.2"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --external:@hotwired/turbo-rails --external:@hotwired/stimulus --external:@hotwired/stimulus-loading --external:lexxy --minify && yarn minify:css",
    "build:css": "rails tailwindcss:build",
    "minify:css": "csso app/assets/stylesheets/rouge.css --output app/assets/builds/rouge.css && csso app/assets/stylesheets/lexxy-editor-content.css --output app/assets/builds/lexxy-editor-content.css",
    "minify:css:watch": "nodemon --watch app/assets/stylesheets --ext css --exec \"yarn minify:css\""
  }
}
